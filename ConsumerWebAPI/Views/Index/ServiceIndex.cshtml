@model List<ConsulService>

<style>
    table.tftable {
        font-size: 12px;
        color: #333333;
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #e4e4e4;
    }

        table.tftable th,
        table.tftable td {
            font-weight: 200;
            font-style: normal;
            padding: 8px;
            border: 1px solid #e4e4e4;
            text-align: center;
        }

        table.tftable th {
            background-color: #f2f2f2;
            color: #333333;
        }

        table.tftable tr {
            background-color: #ffffff;
        }

            table.tftable tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            table.tftable tr:hover {
                background-color: #cbe7ff;
            }

    .tftable > thead > tr:hover {
        background-color: #ffffff;
    }

    .action-link {
        color: #007bff;
        text-decoration: none;
    }

        .action-link:hover {
            text-decoration: underline;
        }
</style>

<table class="tftable">
    <thead>
        <tr>
            <th>服务ID</th>
            <th>服务IP</th>
            <th>服务端口</th>
            <th>服务名称</th>
            <th>调用服务</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Address</td>
                <td>@item.Port</td>
                <td>@item.Name</td>
               @* <td>@Html.ActionLink("获取数据", "GetWebAPI", new { Url = item.Url }, new { @class = "action-link" })</td>*@
                <td><a href="~/Ajax/Index?url=@item.Url">获取数据</a></td>
            </tr>
        }
    </tbody>
</table>
